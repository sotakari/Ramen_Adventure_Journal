<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= image_tag @review.get_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
           <%= image_tag @review.user.get_profile_image, class:"mt-3 rounded-circle";  %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(review_path(@review.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @review.shop_name %></span></strong>
              <span class="ml-2"><i class="fas fa-utensils"></i> <%= @review.ramen_name %></span>
            <% end %>
          </p>
          <p class="card-title">説明：<%= @review.review_comment %></p>
          <span class="card-title">
            <strong><i class="fas fa-yen-sign"></i>価格：</strong><%= @review.price %>円
          </span>
          <span><i class="fas fa-user"></i> By <%= @review.user.name %></span>
          <span><i class="fa fa-calendar"></i> <%= @review.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <% if @review.user == current_user %>
           <%= link_to "削除", review_path(@review), class: "btn btn-danger mr-1", method: :delete, data: { confirm: "本当に削除しますか？" } %>
           <%= link_to "編集", edit_review_path(@review), class: "btn btn-secondary ml-1" %>
          <% end %>
        </div>
      </div>
      <hr>
      </div>
    </div>
  </div>
</div>