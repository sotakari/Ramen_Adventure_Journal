<div class="review py-5 bg-light mb-5">
  <div class="card w-75 mx-auto mt-4 mb-4 shadow-lg">
    <%= image_tag @review.get_image, class:"card-img-top"; %>
    <div class="card-body mb-4">
      <div class="row">
        <div class="col-2">
           <%= image_tag @review.user.get_profile_image, class:"mt-3 rounded-circle";  %>
        </div>

        <div class="col-10">
          <p class="card-title">
            <%= link_to(review_path(@review.id), class:"text-dark") do %>

              <strong><i class="fa-solid fa-shop"></i>
                <span><%= @review.shop_name %></span>
              </strong>

              <strong><i class="fas fa-utensils ml-3"></i>
                <span><%= @review.ramen_name %></span>
              </strong>
            <% end %>
          </p>

          <div class="card-title">
            <strong><%= @review.price %>円</strong>
          </div>

          <div class="form-group">
            <%= render "public/reviews/static_rate", review: @review %>
          </div>

          <p class="card-title"><%= @review.review_comment %></p>

          <div class="card-title"><i class="fas fa-user mr-1"></i><%= @review.user.name %></div>

          <div class="card-title"><i class="fa fa-calendar"></i> <%= @review.created_at.strftime('%Y/%m/%d') %></div>

          <% if @review.user == current_user %>
            <div>
              <%= link_to "削除", review_path(@review), class: "btn btn-danger mr-1", method: :delete, data: { confirm: "本当に削除しますか？" } %>
              <%= link_to "編集", edit_review_path(@review), class: "btn btn-secondary ml-1" %>
            </div>
          <% end %>

        </div>
      </div>
      <hr>
    </div>
  </div>
</div>