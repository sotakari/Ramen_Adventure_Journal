<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">投稿編集フォーム</h5>
      <div class="form-body p-4">
        <%= form_with model: @review, local: true do |f| %>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-image"></i></span>
            </div>
            <div class="custom-file">
              <%= f.file_field :ramen_image, class: 'custom-file-input', accept: "image/*" %>
              <label class="custom-file-label" for="post_image_image" style="text-align: left;">ラーメン画像</label>
            </div>
          </div>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :shop_name, class: "form-control", placeholder: "店舗名" %>
          </div>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-utensils"></i></span>
            </div>
            <%= f.text_field :ramen_name, class: "form-control", placeholder: "ラーメン名" %>
          </div>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-utensils"></i></span>
            </div>
            <%= f.text_field :price, class: "form-control", placeholder: "価格" %>
          </div>

          <!-- 表示用の画像を追加 -->
          <% if @review.ramen_image.attached? %>
            <div class="mb-3">
              <%= image_tag @review.ramen_image, class: "current-image" %>
            </div>
          <% end %>

          <%= f.text_area :review_comment, class: "form-control", rows: "3", placeholder: "コメントを記入" %>
          <hr>
          <%= f.submit '更新', class: "btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>