<div class="card-list-containar py-5">
  <% @reviews.each do |review| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to review_path(review.id) do %>
      <%= image_tag review.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag review.user.get_profile_image, class:"mt-3 rounded-circle";  %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(review_path(review.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= review.shop_name %> - <%= review.ramen_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= review.review_comment %></p>
          <p class="card-text">
            <strong><i class="fas fa-yen-sign"></i>価格：</strong><%= review.price %>円
          </p>
          <span><i class="fas fa-user"></i> By <%= review.user.name %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>