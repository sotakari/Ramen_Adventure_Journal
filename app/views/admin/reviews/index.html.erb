<div class="container mb-5">
  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-md-3 col-sm-6 mb-4 mt-2">
        <div class="card h-100 shadow-lg">
          <%= link_to admin_review_path(review) do %>
            <%= image_tag review.get_image, class:"card-img-top img-fluid", style: "height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body d-flex flex-column mb-4">

            <strong class="mb-2"><i class="fa-solid fa-shop"></i>
              <span><%= link_to(review.shop_name, admin_review_path(review), class:"text-dark") %></span>
            </strong>

            <strong class="mb-2"><i class="fa-solid fa-utensils"></i>
              <span><%= review.ramen_name %></span>
            </strong>

            <p class="card-text">
              <strong><%= review.price %>å††</strong>
            </p>

            <p class="card-text"><%= review.review_comment.truncate(50) %></p>

            <div class="mt-auto">
              <span><i class="fas fa-user"></i> By <%= review.user.name %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>