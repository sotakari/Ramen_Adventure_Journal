<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">プロフィール編集</h5>

      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "件") %> のエラーが発生しました：</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
          <div class="form-group mb-3 mt-4">
            <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
            <%= f.file_field :profile_image, class: "form-control-file" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ユーザー名"%>
          </div>

          <div class="input-group my-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
          </div>

          <div>会員ステータス</div>
            <div class="form-group">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, true, class: 'form-check-input', id: 'is_active_true' %>
              <%= f.label :is_active_true, "有効", class: 'form-check-label' %>
            </div>

            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, false, class: 'form-check-input', id: 'is_active_false' %>
              <%= f.label :is_active_false, "退会", class: 'form-check-label' %>
            </div>
          </div>

          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-success mt-5" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
